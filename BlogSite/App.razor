@using System.Net;
@{
    var mainLayoutType = typeof(MainLayout);
}
<Router AppAssembly="@GetType().Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@mainLayoutType" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@mainLayoutType">
            <BlogSite.Components.ErrorView ErrorCode="HttpStatusCode.NotFound"/>
        </LayoutView>
    </NotFound>
</Router>
